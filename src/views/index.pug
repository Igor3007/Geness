block header
  .header
    .container
      .header__logo: a(href='/'): img(src="./img/common/logo.svg")
      .header__nav
        nav
          ul
            li.menu: a(href='#')
              +icons('#ic_square-menu', 16)
              span Все услуги
            li: a(href='#') О центре
            li: a(href='#') Врачи
            li: a(href='#') Инфоцентр
            li: a(href='#') Контакты
      .header__info
        .header__phone
          .header-phone
            .header-phone__active(data-modal="phone")
              a 8 500 700 60 60
              +icons('#ic_arr-down', 12)
            .header-phone__list
              ul
                li
                  a(href='tel:85007006060')
                    +icons('#ic_phone')
                    span 8 500 700 60 60
                  span Приемная
                li
                  a(href='tel:85007006060')
                    +icons('#ic_phone')
                    span 8 800 700 60 60
                  span Приемная
                li
                  a(href='tel:85007006060')
                    +icons('#ic_phone')
