            .footer-form
              form(action='#' method='POST')
                .email-submit
                  .email-submit__input: input(type="email" placeholder="Введите ваш email")
                  .email-submit__btn: button(type="submit"): +bgimage('./img/svg/ic_ok.svg')
            .footer-info
              .footer__phone
                .footer-phone
                  .footer-phone__active(data-modal="phone")
                    a 8 500 700 60 60
                    +icons('#ic_arr-down', 12)
                  .footer-phone__list
                    ul
                      li: a(href='tel:85007006060') 8 500 700 60 60
                      li: a(href='tel:85007006060') 8 800 700 60 60
                      li: a(href='tel:85007006060') +7 910 700 60 60
              .footer__worktime: span Сегодня работаем с 8.00 до 20.00
  .footer-dev
    a(href='#')
      span.dev-text Digital-агентство
      +bgimage('./img/common/logo-dev.svg')




